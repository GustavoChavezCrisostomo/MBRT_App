<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="544dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Detalle"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="38dp"
            android:layout_marginTop="29dp"
            android:text="Area"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="21dp"
            android:text="Area"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/area"
            android:layout_marginTop="27dp"
            android:text="Tecnico"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/area"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="17dp"
            android:layout_toStartOf="@+id/button2"
            android:text="Tecnico" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/tecnico"
            android:layout_marginTop="28dp"
            android:text="Estado"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tecnico"
            android:layout_alignStart="@+id/tecnico"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="20dp"
            android:text="Estado" />

        <TextView
            android:id="@+id/deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Detalle"
            android:textSize="18sp"
            android:layout_below="@+id/estado"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/estado"
            android:layout_below="@+id/deta"
            android:layout_marginTop="14dp"
            android:layout_toStartOf="@+id/button2"
            android:text="Detalle" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="callMainForm"
            app:fabSize="mini"
            app:srcCompat="?android:attr/homeAsUpIndicator"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
